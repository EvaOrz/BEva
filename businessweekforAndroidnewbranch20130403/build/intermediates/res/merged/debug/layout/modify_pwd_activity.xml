<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white_bg" >

    <ImageView
        android:id="@+id/modify_pwd_close"
        android:layout_width="@dimen/login_image_close_width"
        android:layout_height="@dimen/login_image_close_width"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_close_login" />

    <TextView
        android:id="@+id/modify_pwd_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_desc_marginLeft"
        android:layout_marginRight="@dimen/login_desc_marginRight"
        android:layout_marginTop="@dimen/login_desc_marginTop"
        android:layout_toLeftOf="@+id/modify_pwd_close"
        android:text="@string/modify_password"
        android:textColor="@color/login_desc"
        android:textSize="@dimen/dp12_textsize" />

    <RelativeLayout
        android:id="@+id/modify_pwd_old"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_edittext_height"
        android:layout_below="@+id/modify_pwd_desc"
        android:layout_marginLeft="@dimen/login_edittext_margin"
        android:layout_marginRight="@dimen/login_edittext_margin"
        android:layout_marginTop="@dimen/login_edittext_marginTop" >

        <EditText
            android:id="@+id/modify_pwd_old_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/login_edittext_select"
            android:hint="@string/old_pwd"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/black_bg"
            android:textCursorDrawable="@null" />

        <ImageView
            android:id="@+id/modify_pwd_img_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="@dimen/dp5"
            android:src="@drawable/ic_text_field_clear" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/modify_pwd_new"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_edittext_height"
        android:layout_below="@+id/modify_pwd_old"
        android:layout_marginLeft="@dimen/login_edittext_margin"
        android:layout_marginRight="@dimen/login_edittext_margin"
        android:layout_marginTop="@dimen/login_psd_edittext_marginTop" >

        <EditText
            android:id="@+id/modify_pwd_new_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/login_edittext_select"
            android:hint="@string/new_pwd"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/black_bg"
            android:textCursorDrawable="@null" />

        <ImageView
            android:id="@+id/modify_pwd_img_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="@dimen/dp5"
            android:src="@drawable/ic_text_field_clear" />
    </RelativeLayout>

    <Button
        android:id="@+id/modify_sure"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/modify_pwd_new"
        android:layout_below="@+id/modify_pwd_new"
        android:layout_marginTop="@dimen/login_btn_margintop"
        android:background="@drawable/red_btn_bg"
        android:text="@string/complete"
        android:textColor="@color/white_bg"
        android:textSize="@dimen/dp13_textsize" />

    <ImageView
        android:id="@+id/modify_pwd_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modify_sure"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/login_img_marginTop"
        android:contentDescription="@null" />

</RelativeLayout><!-- From: file:/Users/Eva./Desktop/businessweek_tag/ModernMediaUserModel/src/main/res/layout/modify_pwd_activity.xml --><!-- From: file:/Users/Eva./Desktop/businessweek_tag/businessweekforAndroidnewbranch20130403/build/intermediates/exploded-aar/businessweek_tag/modernMediaUserModel/unspecified/res/layout/modify_pwd_activity.xml -->