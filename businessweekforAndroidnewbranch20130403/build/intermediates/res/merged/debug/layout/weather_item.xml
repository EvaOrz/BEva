<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/weather_day_width"
    android:layout_height="@dimen/weather_day_height" >

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="@dimen/weather_icon_width"
        android:layout_height="@dimen/weather_icon_height" />

    <TextView
        android:id="@+id/weather_day"
        android:layout_width="@dimen/weather_day_text_width"
        android:layout_height="@dimen/weather_day_text_height"
        android:layout_marginTop="@dimen/weather_day_margin_top"
        android:gravity="center"
        android:shadowColor="@color/weather_day_shadow"
        android:shadowDx="0.0"
        android:shadowDy="-0.5"
        android:shadowRadius="1.0"
        android:textColor="@color/weather_day_label"
        android:textSize="@dimen/weather_text_size" />

    <TextView
        android:id="@+id/weather_low"
        android:layout_width="@dimen/weather_low_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/weather_low_margin_right"
        android:layout_marginTop="@dimen/weather_low_margin_top"
        android:background="@android:color/transparent"
        android:gravity="right"
        android:shadowColor="@color/weather_day_shadow"
        android:shadowDx="0.0"
        android:shadowDy="-0.5"
        android:shadowRadius="1.0"
        android:textColor="@android:color/white"
        android:textSize="@dimen/weather_low_text_size" />

    <TextView
        android:id="@+id/weather_high"
        android:layout_width="@dimen/weather_high_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/weather_high_margin_right"
        android:layout_marginTop="@dimen/weather_high_margin_top"
        android:background="@android:color/transparent"
        android:gravity="right"
        android:shadowColor="@color/weather_day_shadow"
        android:shadowDx="0.0"
        android:shadowDy="-0.5"
        android:shadowRadius="1.0"
        android:textColor="@android:color/white"
        android:textSize="@dimen/weather_high_text_size" />

