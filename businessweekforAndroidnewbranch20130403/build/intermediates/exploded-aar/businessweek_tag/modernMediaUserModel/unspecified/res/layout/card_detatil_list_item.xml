<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/card_detail_item_divider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/list_item_margin_left"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/list_item_divider" />

    <ImageView
        android:id="@+id/card_detail_avatar"
        android:layout_width="@dimen/list_item_avatar_size"
        android:layout_height="@dimen/list_item_avatar_size"
        android:layout_alignLeft="@id/card_detail_item_divider"
        android:layout_below="@id/card_detail_item_divider"
        android:layout_marginTop="@dimen/list_item_avatar_margin_top"
        android:contentDescription="@null"
        android:src="@drawable/avatar_placeholder" />

    <TextView
        android:id="@+id/card_detail_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_detail_item_divider"
        android:layout_marginLeft="@dimen/list_item_avatar_margin_top"
        android:layout_marginTop="@dimen/list_item_name_margin_top"
        android:layout_toRightOf="@id/card_detail_avatar"
        android:textColor="@color/black_bg"
        android:textSize="@dimen/listitem_name_size" />

    <TextView
        android:id="@+id/card_detail_comment_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/card_detail_user_name"
        android:layout_below="@id/card_detail_avatar"
        android:layout_marginRight="@dimen/list_item_content_margin_right"
        android:layout_marginTop="@dimen/list_item_content_margin_top"
        android:ellipsize="end"
        android:maxLines="10"
        android:singleLine="false"
        android:textColor="@color/black_bg"
        android:textSize="@dimen/card_detail_list_item_comment_size" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/card_detail_comment_content"
        android:layout_marginTop="@dimen/list_item_fav_margin_bottom" />

</RelativeLayout><!-- From: file:/Users/Eva./Desktop/businessweek_tag/ModernMediaUserModel/src/main/res/layout/card_detatil_list_item.xml -->