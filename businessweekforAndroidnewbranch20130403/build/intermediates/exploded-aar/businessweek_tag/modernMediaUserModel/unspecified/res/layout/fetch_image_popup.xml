<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_bg"
    android:orientation="vertical" >

    <Button
        android:id="@+id/fetch_image_from_camear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fetch_img_margin"
        android:layout_marginRight="@dimen/fetch_img_margin"
        android:layout_marginTop="@dimen/fetch_img_margin"
        android:text="@string/camera"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/fetch_image_from_gallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fetch_img_margin"
        android:layout_marginRight="@dimen/fetch_img_margin"
        android:layout_marginTop="@dimen/fetch_img_margin"
        android:text="@string/select_from_album"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/fetch_image_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fetch_img_margin"
        android:layout_marginRight="@dimen/fetch_img_margin"
        android:layout_marginTop="@dimen/fetch_img_margin"
        android:text="@string/cancel"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/fetch_img_margin"
        android:orientation="horizontal"
        android:visibility="invisible" />

</LinearLayout><!-- From: file:/Users/Eva./Desktop/businessweek_tag/ModernMediaUserModel/src/main/res/layout/fetch_image_popup.xml -->