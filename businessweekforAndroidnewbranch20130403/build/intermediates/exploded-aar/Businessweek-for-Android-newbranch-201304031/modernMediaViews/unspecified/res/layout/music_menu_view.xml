<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music_menu_frame"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <cn.com.modernmedia.widget.GifView
        android:id="@+id/music_menu_status"
        android:layout_width="30dp"
        
        android:layout_height="30dp" />

    <ImageView
        android:id="@+id/music_menu_stop"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/music_pause" />

    <ImageView
        android:id="@+id/music_menu_play_pause"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/music_play" />

    <TextView
        android:id="@+id/music_menu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="********************"
        android:textColor="@color/white_bg" />

</LinearLayout><!-- From: file:/Users/Eva./Desktop/Businessweek-for-Android-newbranch-201304031/modernMediaViews/src/main/res/layout/music_menu_view.xml -->