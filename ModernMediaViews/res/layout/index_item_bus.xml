<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bus_index_item_contain"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/bus_index_item_column_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bus_index_marginLeft"
        android:layout_marginRight="@dimen/bus_index_marginRight"
        android:layout_marginTop="@dimen/bus_index_marginTop"
        android:background="@color/black_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/bus_index_column_title_paddingLeft"
        android:textColor="@color/white_bg"
        android:textSize="@dimen/dp13_textsize"
        android:visibility="gone" />

   <ImageView
        android:id="@+id/bus_index_item_adv_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null" />

    <RelativeLayout
        android:id="@+id/bus_index_item_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bus_index_marginLeft"
        android:layout_marginRight="@dimen/bus_index_marginRight"
        android:paddingTop="@dimen/bus_index_marginTop" >

        <ImageView
            android:id="@+id/bus_index_item_img"
            android:layout_width="@dimen/bus_index_img_frame_size"
            android:layout_height="@dimen/bus_index_img_frame_size"
            android:contentDescription="@null"
            android:paddingBottom="@dimen/bus_index_img_padding"
            android:paddingRight="@dimen/bus_index_img_padding" />

        <ImageView
            android:id="@+id/bus_index_item_rightRow"
            android:layout_width="@dimen/bus_index_rightRow_size"
            android:layout_height="@dimen/bus_index_rightRow_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/bus_index_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bus_index_desc_marginLeft"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/bus_index_item_rightRow"
            android:layout_toRightOf="@id/bus_index_item_img"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/dp15_textsize" />

        <TextView
            android:id="@+id/bus_index_item_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bus_index_item_title"
            android:layout_alignRight="@+id/bus_index_item_title"
            android:layout_below="@+id/bus_index_item_title"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/index_item_desc"
            android:textSize="@dimen/dp12_textsize" />

        <ImageView
            android:id="@+id/bus_index_item_divider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bus_index_item_img"
            android:layout_marginTop="@dimen/bus_index_marginTop"
            android:contentDescription="@null"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bus_index_item_more_rl"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bus_index_more_height"
        android:layout_marginTop="@dimen/bus_index_marginTop"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/bus_index_item_more_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/bus_index_marginRight"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/bus_index_item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/bus_index_item_more_img"
            android:paddingRight="@dimen/bus_index_more_padding_right"
            android:textColor="@color/index_item_desc"
            android:textSize="@dimen/dp10_textsize" />
    </RelativeLayout>
</LinearLayout>