<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/column_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/column_top_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/column_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/column_top_image"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/column_head_shadow"
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:layout_below="@id/column_logo"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <ListView
        android:id="@+id/column_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/column_head_shadow"
        android:cacheColorHint="@color/full_transparent"
        android:divider="@null"
        android:fadingEdge="none" />

</RelativeLayout>