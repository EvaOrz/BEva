<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fav_item_contain"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/fav_item_margin"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/black_bg"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/fav_item_name"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fav_item_height"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fav_item_name_paddingLeft"
        android:paddingRight="@dimen/fav_item_name_paddingLeft"
        android:singleLine="true"
        android:textColor="@color/white_bg"
        android:textSize="@dimen/dp16_textsize" />

    <ImageView
        android:id="@+id/fav_item_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:contentDescription="@null"
        android:visibility="gone" />

</RelativeLayout>