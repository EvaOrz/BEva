<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white_bg"
    android:orientation="vertical" >
    <cn.com.modernmedia.widget.AtlasViewPager
        android:id="@+id/bus_atlas_gallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none" />

    <TextView
        android:id="@+id/bus_atlas_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_atlas_gallery"
        android:layout_marginTop="@dimen/dp10"
        android:paddingLeft="@dimen/dp15"
        android:textColor="@color/black_bg"
        android:textSize="@dimen/dp14_textsize" />

    <TextView
        android:id="@+id/bus_atlas_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_atlas_title"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:paddingTop="@dimen/dp10"
        android:textColor="@color/black_bg"
        android:textSize="@dimen/dp14_textsize" />

    <LinearLayout
        android:id="@+id/bus_atlas_gallery_dot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="top|right"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp20"
        android:paddingRight="@dimen/dp10" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/progress" />

</RelativeLayout>