<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weekly_index_item_contain"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/weekly_index_item_date"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/weekly_index_item_date_height"
        android:background="@color/white_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/weekly_index_item_image_bg_marginLeft"
        android:textColor="#ff999999"
        android:textSize="@dimen/dp14_textsize"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/weekly_index_item_divider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weekly_index_item_date"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/weekly_index_item_fl"
        android:layout_width="@dimen/weekly_index_item_img_bg_size"
        android:layout_height="@dimen/weekly_index_item_img_bg_size"
        android:layout_below="@+id/weekly_index_item_divider"
        android:layout_marginLeft="@dimen/weekly_index_item_image_bg_marginLeft"
        android:layout_marginTop="@dimen/weekly_index_item_image_bg_marginLeft" >

        <ImageView
            android:id="@+id/weekly_index_item_image"
            android:layout_width="@dimen/weekly_index_item_img_size"
            android:layout_height="@dimen/weekly_index_item_img_size"
            android:layout_gravity="center"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/weekly_index_item_video"
            android:layout_width="@dimen/weekly_index_item_img_video_size"
            android:layout_height="@dimen/weekly_index_item_img_video_size"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@drawable/ico_video"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/weekly_index_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/weekly_index_item_fl"
        android:layout_marginLeft="@dimen/weekly_index_item_image_bg_marginLeft"
        android:layout_marginRight="@dimen/dp20_textsize"
        android:layout_toRightOf="@+id/weekly_index_item_fl"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black_bg"
        android:textSize="@dimen/dp14_textsize" />

    <TextView
        android:id="@+id/weekly_index_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/weekly_index_item_title"
        android:layout_below="@+id/weekly_index_item_title"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/index_item_desc"
        android:textSize="@dimen/dp12_textsize" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/weekly_index_item_fl"
        android:layout_marginTop="@dimen/weekly_index_item_image_bg_marginLeft"
        android:contentDescription="@null"
        android:visibility="invisible" />

</RelativeLayout>