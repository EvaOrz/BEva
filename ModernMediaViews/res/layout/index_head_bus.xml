<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg" >

    <cn.com.modernmedia.views.widget.ImageCircularViewPager
        android:id="@+id/bus_index_gallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/bus_index_gallery_dot"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bus_index_dot_height"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp10" />

    <RelativeLayout
        android:id="@+id/bus_index_head_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bus_index_dot_height"
        android:layout_alignParentBottom="true" >

        <TextView
            android:id="@+id/bus_index_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp15"
            android:textColor="@color/white_bg"
            android:textSize="@dimen/dp14_textsize" />
    </RelativeLayout>

</RelativeLayout>