<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg" >

    <RelativeLayout
        android:id="@+id/lohas_index_item_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/lohas_index_item_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@null"
            android:scaleType="center" />

        <TextView
            android:id="@+id/lohas_index_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lady_index_item_title_marginLeft"
            android:gravity="center"
            android:textColor="@color/white_bg"
            android:textSize="@dimen/dp13_textsize" />

        <RelativeLayout
            android:id="@+id/lohas_index_item_tilte_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/lohas_index_item_title_bar_height"
            android:layout_alignBottom="@id/lohas_index_item_image"
            android:layout_alignLeft="@id/lohas_index_item_image"
            android:layout_alignRight="@id/lohas_index_item_image"
            android:background="@color/white_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lohas_index_item_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/lady_index_item_title_marginLeft"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black_bg"
                android:textSize="@dimen/dp15_textsize" />

            <ImageView
                android:id="@+id/lohas_index_item_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/lohas_index_item_img_margin"
                android:contentDescription="@null"
                android:scaleType="center" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/lohas_index_item_adv_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lohas_index_item_rl"
        android:contentDescription="@null"
        android:scaleType="center"
        android:visibility="gone" />

</RelativeLayout>