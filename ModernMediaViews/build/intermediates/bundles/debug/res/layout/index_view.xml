<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg">

    <cn.com.modernmedia.views.index.IndexViewPager
        android:id="@+id/index_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/index_titleBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <FrameLayout
        android:id="@+id/index_contain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/index_titleBar"
        android:orientation="vertical" />

    <FrameLayout
        android:id="@+id/index_issuelist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/index_titleBar"
        android:orientation="vertical"
        android:visibility="gone" />

    <include
        layout="@layout/progress"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/index_titleBar"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/index_cover"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/index_titleBar"
        android:orientation="horizontal"
        android:visibility="gone" />



</RelativeLayout>