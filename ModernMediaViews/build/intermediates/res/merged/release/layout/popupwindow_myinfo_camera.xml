<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupwindow_layout_myinfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_bg"
    >

    <Button
        android:id="@+id/popupwindow_myinfo_takephoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dp"
        android:text="@string/camera"
        android:textColor="@android:color/black" 
        />

    <Button
        android:id="@+id/popupwindow_myinfo_selectheadimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/popupwindow_myinfo_takephoto"
        android:layout_alignRight="@+id/popupwindow_myinfo_takephoto"
        android:layout_below="@+id/popupwindow_myinfo_takephoto"
        android:layout_marginTop="5dp"
         android:textColor="@android:color/black" 
        android:text="@string/select_from_album"
        />

    <Button
        android:id="@+id/popupwindow_myinfo_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/popupwindow_myinfo_selectheadimage"
        android:layout_alignRight="@+id/popupwindow_myinfo_selectheadimage"
        android:layout_below="@+id/popupwindow_myinfo_selectheadimage"
        android:layout_marginTop="10dp"
        android:text="@string/cancel"
        android:textColor="@android:color/black" 
        />

