<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/book_all_corners"
        android:orientation="vertical"
        android:padding="0.5dp" >

        <FrameLayout
            android:id="@+id/book_item_back_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/book_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/book_item_title_bac"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="TAG"
                android:textColor="@color/white_bg"
                android:textSize="11sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <cn.com.modernmedia.views.column.book.RoundAngleImageView
                android:id="@+id/book_item_cover"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/book_item_title_weekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/body_bg"
                android:gravity="center"
                android:singleLine="true"
                android:text="TAG"
                android:textColor="@color/black_bg"
                android:textSize="@dimen/dp11_textsize"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/book_item_check"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right|top"
                android:layout_margin="1dp"
                android:src="@drawable/subcribe_checked"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

