<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/user_center_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bar_height" >

        <Button
            android:id="@+id/user_center_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/nav_button_margin_left"
            android:background="@drawable/ic_back" />
    </RelativeLayout>

    <cn.com.modernmediausermodel.widget.UserCenterView
        android:id="@+id/user_center_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/user_center_bar_layout"
        android:layout_marginTop="@dimen/user_card_listview_magin_top"
        android:cacheColorHint="@android:color/white"
        android:divider="@null"
        android:listSelector="@android:color/transparent" />

