<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:orientation="vertical"
    android:padding="@dimen/login_image_close_marginright" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="找回密码"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/userinfo_textsize" />

        <ImageView
            android:id="@+id/forget_img_close"
            android:layout_width="@dimen/login_image_close_width"
            android:layout_height="@dimen/login_image_close_width"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_close_login" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_edittext_height"
        android:layout_marginTop="15dp" >

        <EditText
            android:id="@+id/forget_phone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/login_edittext_select"
            android:hint="手机号"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/black_bg"
            android:textCursorDrawable="@null" />

        <ImageView
            android:id="@+id/forget_phone_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="@dimen/dp5"
            android:src="@drawable/ic_text_field_clear" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_edittext_height"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/forget_verify_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/login_edittext_select"
            android:hint="@string/verify_code"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/black_bg"
            android:textCursorDrawable="@null" />

        <Button
            android:id="@+id/forget_get_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/login_btn_register_bg"
            android:contentDescription="@null"
            android:padding="@dimen/dp5"
            android:text="@string/get_verify_code"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/dp13_textsize" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_edittext_height"
        android:layout_marginTop="15dp" >

        <EditText
            android:id="@+id/forget_new_pwd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/login_edittext_select"
            android:hint="新密码"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/black_bg"
            android:textCursorDrawable="@null" />

        <ImageView
            android:id="@+id/forget_new_pwd_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="@dimen/dp5"
            android:src="@drawable/ic_text_field_clear" />
    </RelativeLayout>

    <Button
        android:id="@+id/forget_complete"
        android:layout_width="@dimen/login_btn_width"
        android:layout_height="@dimen/login_btn_height"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/userinfo_avatar_marginTop"
        android:background="@drawable/login_btn_login_bg"
        android:text="@string/complete"
        android:textColor="@color/white_bg"
        android:textSize="@dimen/dp13_textsize" />

