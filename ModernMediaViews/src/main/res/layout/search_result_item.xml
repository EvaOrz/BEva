<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_bg">

    <ImageView
        android:id="@+id/result_img"
        android:layout_width="@dimen/login_btn_weibo_marginLeft"
        android:layout_height="@dimen/login_btn_weibo_marginLeft"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10" />

    <ImageView
        android:id="@+id/result_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp10"
        android:scaleType="center"
        android:src="@drawable/index_item_arrow" />

    <TextView
        android:id="@+id/result_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:layout_toLeftOf="@+id/result_row"
        android:layout_toRightOf="@id/result_img"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/column_item_bg"
        android:textSize="@dimen/dp15_textsize" />

    <TextView
        android:id="@+id/result_title_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/result_title"
        android:layout_alignRight="@id/result_title"
        android:layout_below="@+id/result_title"
        android:layout_marginTop="@dimen/dp2"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/result_desc"
        android:textSize="@dimen/dp12_textsize" />

    <View
        android:id="@+id/title_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/result_img"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:background="@drawable/line" />

</RelativeLayout>