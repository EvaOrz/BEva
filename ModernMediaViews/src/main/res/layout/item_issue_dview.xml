<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/body_bg"
              android:gravity="top"
              android:orientation="horizontal"
              android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/issue_item_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/dp30_textsize"/>

        <TextView
            android:id="@+id/issue_item_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/issue_item_date1"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/issue_item_date1"
            android:text="7æœˆ"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/dp14_textsize"/>

        <TextView
            android:id="@+id/issue_item_date3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/issue_item_date1"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/dp14_textsize"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/issue_item_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/issue_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/black_bg"
        android:textSize="@dimen/dp16_textsize"/>

</LinearLayout>