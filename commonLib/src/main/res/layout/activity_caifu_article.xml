<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/title_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/caifu_article_back"
            android:layout_width="@dimen/bar_height"
            android:layout_height="@dimen/bar_height"
            android:scaleType="center"
            android:layout_marginLeft="@dimen/nav_button_margin_left"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/caifu_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_bg"

            android:textSize="@dimen/dp16_textsize"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/caifu_article_btn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/dinggou"
            />
    </LinearLayout>


    <cn.com.modernmedia.widget.CommonWebView
        android:id="@+id/caifu_article_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>