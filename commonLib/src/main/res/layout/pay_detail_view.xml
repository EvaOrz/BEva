<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/black_bg"
              android:orientation="vertical"
              android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_text1"
            android:textColor="@color/white_bg"
            android:textSize="@dimen/dp17_textsize"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/pay_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pay_close"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/pay_text2"
        android:textColor="#757575"
        android:textSize="@dimen/dp12_textsize"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/pay_text3"
        android:textColor="#757575"
        android:textSize="@dimen/dp10_textsize"/>

    <ListView
        android:id="@+id/products_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:divider="@null"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:listSelector="#00000000"
        android:scrollbars="none"/>

    <Button
        android:id="@+id/pay_zengyue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/pay_btn"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/pay_zengyue"
        android:textColor="@color/white_bg"
        android:textSize="@dimen/dp15_textsize"/>

    <TextView
        android:id="@+id/pay_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/pay_help"
        android:textColor="@color/grgray"
        android:textSize="@dimen/dp15_textsize"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/pay_whole_ad"/>

</LinearLayout>