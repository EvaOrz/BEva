<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="bottom"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@drawable/line" />

    <RadioGroup
        android:id="@+id/bottom_nav_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/bottom_nav_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/bottom_news_img_selector"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/nav_news"
            android:textColor="@drawable/bottom_text_checked"
            android:textSize="@dimen/dp12_textsize" />

        <RadioButton
            android:id="@+id/bottom_nav_live"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/bottom_live_img_selector"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/nav_live"
            android:textColor="@drawable/bottom_text_checked"
            android:textSize="@dimen/dp12_textsize" />

        <RadioButton
            android:id="@+id/bottom_nav_special"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bottom_special_img_selector"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/nav_special"
            android:textColor="@drawable/bottom_text_checked"
            android:textSize="@dimen/dp12_textsize" />

        <RadioButton
            android:id="@+id/bottom_nav_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/bottom_mine_img_selector"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/nav_mine"
            android:textColor="@drawable/bottom_text_checked"
            android:textSize="@dimen/dp12_textsize" />
    </RadioGroup>

</LinearLayout><!-- From: file:/Users/Eva./Desktop/businessweek_tag/ibloomberg/src/main/res/layout/main_button_radiogroup.xml -->