<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/modify_email_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/title_bar" >

        <ImageView
            android:id="@+id/modify_email_button_back"
            android:layout_width="@dimen/bar_height"
            android:layout_height="@dimen/bar_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/nav_button_margin_left"
            android:contentDescription="@null"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/modify_email_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/modify_email"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/dp18_textsize" />

        <TextView
            android:id="@+id/modify_email_button_complete"
            android:layout_width="@dimen/bar_height"
            android:layout_height="@dimen/bar_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/nav_button_margin_left"
            android:gravity="center"
            android:text="@string/complete"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/dp14_textsize" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/list_item_divider" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/modify_email_address"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_edittext_height"
        android:layout_below="@+id/modify_email_bar_layout"
        android:layout_marginLeft="@dimen/login_edittext_margin"
        android:layout_marginRight="@dimen/login_edittext_margin"
        android:layout_marginTop="@dimen/login_edittext_marginTop" >

        <EditText
            android:id="@+id/modify_email_address_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/login_edittext_select"
            android:hint="@string/input_email"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/black_bg"
            android:textCursorDrawable="@null" />

        <ImageView
            android:id="@+id/modify_email_address_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="@dimen/dp5"
            android:src="@drawable/ic_text_field_clear" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/modify_email_password"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_edittext_height"
        android:layout_below="@+id/modify_email_address"
        android:layout_marginLeft="@dimen/login_edittext_margin"
        android:layout_marginRight="@dimen/login_edittext_margin"
        android:layout_marginTop="@dimen/login_psd_edittext_marginTop" >

        <EditText
            android:id="@+id/modify_email_password_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/login_edittext_select"
            android:hint="@string/input_password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/black_bg"
            android:textCursorDrawable="@null" />

        <ImageView
            android:id="@+id/modify_email_pwd_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="@dimen/dp5"
            android:src="@drawable/ic_text_field_clear" />
    </RelativeLayout>

