<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/column_contain"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/column_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/column_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/column_head"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:fadingEdge="none" />

    <TextView
        android:id="@+id/column_tip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/dp30_textsize"
        android:paddingTop="@dimen/dp10"
        android:textSize="@dimen/dp16_textsize"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/add_column_frame"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/add_column_bg_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/subscribe_addcolumn_bg"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="@dimen/dp15"
            android:layout_height="@dimen/dp15"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp15"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/subscribe_add" />

        <TextView
            android:id="@+id/add_column_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp10"
            android:text="@string/add_column"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/dp15_textsize" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/Eva./Desktop/businessweek_tag/modernMediaViews/src/main/res/layout/new_column_view.xml -->