<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg" >

    <ImageView
        android:id="@+id/solo_item_img"
        android:layout_width="@dimen/index_img_frame_size"
        android:layout_height="@dimen/index_img_frame_size"
        android:layout_marginLeft="@dimen/index_marginLeft"
        android:layout_marginTop="@dimen/index_marginTop"
        android:background="@drawable/iphone_placeholder_shadow"
        android:paddingBottom="@dimen/index_img_padding"
        android:paddingRight="@dimen/index_img_padding"
        android:src="@drawable/general_placeholder" />

    <ImageView
        android:id="@+id/solo_item_rightRow"
        android:layout_width="@dimen/index_rightRow_size"
        android:layout_height="@dimen/index_rightRow_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/index_marginRight" />

    <TextView
        android:id="@+id/solo_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/solo_item_img"
        android:layout_marginLeft="@dimen/index_desc_marginLeft"
        android:layout_marginRight="@dimen/index_desc_marginRight"
        android:layout_toLeftOf="@+id/solo_item_rightRow"
        android:layout_toRightOf="@id/solo_item_img"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black_bg"
        android:textSize="@dimen/index_item_title_textSize" />

    <TextView
        android:id="@+id/solo_item_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/solo_item_title"
        android:layout_alignRight="@+id/solo_item_title"
        android:layout_below="@+id/solo_item_title"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/index_item_desc"
        android:textSize="@dimen/index_desc_textSize" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/solo_item_img"
        android:layout_marginTop="@dimen/index_marginTop"
        android:background="@drawable/line" />

</RelativeLayout>