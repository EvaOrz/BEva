<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/article_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/article_bar_height"
        android:background="@drawable/navbar" >

        <Button
            android:id="@+id/article_back_btn"
            android:layout_width="@dimen/article_button_width"
            android:layout_height="@dimen/article_button_height"
            android:layout_marginLeft="@dimen/article_button_marginleft"
            android:background="@drawable/nav_back" />

        <Button
            android:id="@+id/article_share_btn"
            android:layout_width="@dimen/article_button_width"
            android:layout_height="@dimen/article_button_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/article_button_marginleft"
            android:background="@drawable/nav_actionsheet" />

        <Button
            android:id="@+id/article_fav_btn"
            android:layout_width="@dimen/article_button_width"
            android:layout_height="@dimen/article_button_height"
            android:layout_toLeftOf="@+id/article_share_btn"
            android:background="@drawable/nav_fav" />

        <Button
            android:id="@+id/article_font_btn"
            android:layout_width="@dimen/article_button_width"
            android:layout_height="@dimen/article_button_height"
            android:layout_toLeftOf="@+id/article_fav_btn"
            android:background="@drawable/nav_font_size" />
    </RelativeLayout>

    <cn.com.modernmedia.widget.CommonViewPager
        android:id="@+id/article_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/article_toolbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:layout_below="@+id/article_toolbar"
        android:background="@drawable/navbar_shadow" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/article_toolbar"
        layout="@layout/progress_activity"
        android:visibility="gone" />

</RelativeLayout>