<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/body_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/article_bar_height"
        android:background="@color/title_bar">

        <ImageView
            android:id="@+id/vip2vip_back"
            android:layout_width="@dimen/article_bar_height"
            android:layout_height="@dimen/article_bar_height"
            android:layout_marginLeft="@dimen/dp5"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/vip_up_title"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/dp18_textsize"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/list_item_divider"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp15"
        android:text="升级为"
        android:textColor="@color/grgray"
        android:textSize="@dimen/dp14_textsize"/>


    <ListView
        android:id="@+id/vipup_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_bg"
        android:divider="@drawable/list_item_divider"
        android:listSelector="@color/transparent"
        android:paddingLeft="5dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:background="@color/white_bg"
        android:padding="20dp"
        >


        <ImageView
            android:id="@+id/vip_arrow"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/dp20"
            android:src="@drawable/vip_arrow"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/vip_arrow"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/taocan_my_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/black_bg"
                android:textSize="@dimen/dp16_textsize"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="剩余"
                android:textColor="@color/grgray"
                android:textSize="@dimen/dp14_textsize"/>

            <TextView
                android:id="@+id/taocan_my_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/black_bg"
                android:textSize="@dimen/dp16_textsize"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/vip_arrow"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/taocan_to_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/vip_mine_pay"
                android:textSize="@dimen/dp16_textsize"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="补偿"
                android:textColor="@color/grgray"
                android:textSize="@dimen/dp14_textsize"/>

            <TextView
                android:id="@+id/taocan_to_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/notice_gray"
                android:lines="1"
                android:textColor="@color/vip_mine_pay"
                android:textSize="@dimen/dp16_textsize"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_bg"
        android:orientation="vertical"
        android:padding="15dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总服务天数"
                android:textColor="@color/black_bg"
                android:textSize="@dimen/dp16_textsize"/>

            <ImageView
                android:id="@+id/taocan_notice1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/notice_gray"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/taocan_total_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_bg"
                android:textSize="@dimen/dp16_textsize"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应付金额"
                android:textColor="@color/black_bg"
                android:textSize="@dimen/dp16_textsize"/>


            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/taocan_total_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="@dimen/dp16_textsize"/>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/taocan_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40_text_size"
        android:layout_margin="15dp"
        android:background="@drawable/vip_black_btn_bg"
        android:text="确认升级"
        android:textColor="@color/white_bg"
        android:textSize="@dimen/dp16_textsize"
        />


</LinearLayout>