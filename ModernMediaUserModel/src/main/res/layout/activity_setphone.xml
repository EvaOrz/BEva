<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/article_bar_height"
        android:background="@color/title_bar">

        <ImageView
            android:id="@+id/vip_setphone_back"
            android:layout_width="@dimen/article_bar_height"
            android:layout_height="@dimen/article_bar_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp5"
            android:contentDescription="@null"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setphone_title"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/dp18_textsize" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/list_item_divider" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:background="@color/title_bar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vip_set_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/dp20_textsize"
            android:text="@string/order_phone"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/dp14_textsize" />

        <EditText
            android:id="@+id/vip_setphone_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp20_textsize"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:maxLength="11"
            android:textSize="@dimen/dp14_textsize" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/forget_ifshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/title_bar"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp25_textsize"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/setphone_verify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="@string/input_verify_code"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/black_bg"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/dp14_textsize" />

            <TextView
                android:id="@+id/setphone_verify_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/vip_black_btn_bg"
                android:contentDescription="@null"
                android:padding="10dp"
                android:text="@string/get_verify_code"
                android:textColor="@color/white_bg" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/red_ring_size_medium"
        android:layout_marginRight="@dimen/red_ring_size_medium"
        android:layout_marginTop="@dimen/red_ring_size_medium"
        android:orientation="horizontal">

        <Button
            android:id="@+id/vip_setphone_post"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/vip_black_btn_bg"
            android:text="@string/order_post"
            android:textColor="@color/white_bg"
            android:textSize="@dimen/dp18_textsize" />
    </LinearLayout>

</LinearLayout>