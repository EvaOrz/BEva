<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/article_bar_height"
        android:background="@color/title_bar">

        <ImageView
            android:id="@+id/vip_code_back"
            android:layout_width="@dimen/article_bar_height"
            android:layout_height="@dimen/article_bar_height"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:layout_marginLeft="@dimen/dp10"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/vip_code_exchange"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/dp18_textsize" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/list_item_divider" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/title_bar"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vip_code_avartar"
            android:layout_width="@dimen/article_gallery_button_height"
            android:layout_height="@dimen/article_gallery_button_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginTop="@dimen/dp30_textsize"
            android:contentDescription="@null"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/vip_code_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/vip_open_avatar"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/dp14_textsize" />

        <EditText
            android:id="@+id/vip_code_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/footer_height"
            android:layout_marginRight="@dimen/footer_height"
            android:layout_marginTop="@dimen/dp30_textsize"
            android:padding="@dimen/dp5"
            android:textColorHint="@color/gray_line"
            android:background="@drawable/vip_code_edit"
            android:maxLines="1"
            android:hint="@string/vip_code_exchange_hint"
            android:maxLength="20" />

        <Button
            android:id="@+id/vip_code_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp30_textsize"
            android:layout_marginLeft="@dimen/footer_height"
            android:layout_marginRight="@dimen/footer_height"
            android:layout_marginTop="@dimen/dp30_textsize"
            android:background="@drawable/vip_black_btn_bg"
            android:text="@string/vip_code_now"
            android:textColor="@color/white_bg"
            android:textSize="@dimen/dp18_textsize" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp18_textsize"
        android:layout_marginRight="@dimen/dp18_textsize"
        android:layout_marginTop="@dimen/dp20"
        android:text="@string/vip_code_exchange_notice1"
        android:textColor="@color/black_bg"
        android:textSize="@dimen/dp12_textsize"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp18_textsize"
        android:layout_marginRight="@dimen/dp18_textsize"
        android:text="@string/vip_code_exchange_notice2"
        android:textColor="@color/grgray"
        android:textSize="@dimen/dp12_textsize"/>

</LinearLayout>