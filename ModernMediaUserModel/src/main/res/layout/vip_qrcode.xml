<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30_textsize">

        <ImageView
            android:id="@+id/vip_qr_avatar"
            android:layout_width="@dimen/vip_height"
            android:layout_height="@dimen/vip_height"
            android:layout_marginLeft="@dimen/dp15_textsize"
            android:contentDescription="@null"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/vip_qr_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/vip_open_avatar"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/vip_qr_avatar"
            android:textColor="@color/user_center_head"
            android:textSize="@dimen/dp16_textsize" />

        <TextView
            android:id="@+id/vip_qr_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vip_qr_nickname"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:layout_toRightOf="@+id/vip_qr_avatar"
            android:textColor="@color/grgray"
            android:textSize="@dimen/dp12_textsize" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/vip_qrcode"
        android:layout_width="@dimen/vip_dialog_view_height"
        android:layout_height="@dimen/vip_dialog_view_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp20"
        android:scaleType="centerInside" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp25_textsize"
        android:gravity="center"
        android:text="@string/vip_qrcode_notice"
        android:textColor="@color/grgray"
        android:textSize="@dimen/dp14_textsize" />

</LinearLayout>