<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp5"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/myvip_img"
        android:layout_width="@dimen/avatar_magin_top"
        android:layout_height="@dimen/avatar_magin_top"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/myvip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/user_center_head"
        android:textSize="@dimen/dp12_textsize" />


</LinearLayout>