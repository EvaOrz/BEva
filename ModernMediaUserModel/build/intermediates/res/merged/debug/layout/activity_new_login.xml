<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg" >

    <ImageView
        android:id="@+id/login_img_close"
        android:layout_width="@dimen/login_image_close_width"
        android:layout_height="@dimen/login_image_close_width"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_close_login" />

    <TextView
        android:id="@+id/login_other_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_img_close"
        android:layout_marginLeft="@dimen/login_desc_marginLeft"
        android:layout_marginTop="@dimen/login_other_login_desc_marginTop"
        android:text="@string/some_account_login"
        android:textColor="@color/login_desc"
        android:textSize="@dimen/dp12_textsize" />

    <LinearLayout
        android:id="@+id/other_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_other_desc"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/login_btn_sina_login"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/login_sina" />

        <ImageView
            android:id="@+id/login_btn_weixin_login"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:src="@drawable/login_weixin" />

        <ImageView
            android:id="@+id/login_btn_qq_login"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/login_qq" />
    </LinearLayout>

    <TextView
        android:id="@+id/login_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/other_login_layout"
        android:layout_marginLeft="@dimen/login_desc_marginLeft"
        android:text="@string/moder_media_account_login"
        android:textColor="@color/login_desc"
        android:textSize="@dimen/dp12_textsize" />

    <RelativeLayout
        android:id="@+id/relativelayout_account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_desc"
        android:layout_marginLeft="@dimen/login_desc_marginLeft"
        android:layout_marginRight="@dimen/login_desc_marginLeft"
        android:layout_marginTop="25dp" >

        <EditText
            android:id="@+id/login_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edittext_select"
            android:gravity="center_vertical"
            android:hint="@string/mail_address"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/black_bg"
            android:textColorHint="@color/login_desc"
            android:textCursorDrawable="@null" />

        <ImageView
            android:id="@+id/login_img_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="@dimen/dp5"
            android:src="@drawable/ic_text_field_clear" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout_account"
        android:layout_marginLeft="@dimen/login_desc_marginLeft"
        android:layout_marginRight="@dimen/login_desc_marginLeft"
        android:layout_marginTop="@dimen/login_btn_margintop" >

        <EditText
            android:id="@+id/login_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edittext_select"
            android:digits="@string/password_digits"
            android:gravity="center_vertical"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/black_bg"
            android:textColorHint="@color/login_desc"
            android:textCursorDrawable="@null" />

        <ImageView
            android:id="@+id/login_img_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="@dimen/dp5"
            android:src="@drawable/ic_text_field_clear" />
    </RelativeLayout>

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout_password"
        android:layout_margin="@dimen/login_desc_marginLeft"
        android:background="@drawable/red_btn_bg"
        android:text="@string/login"
        android:textColor="@color/white_bg"
        android:textSize="@dimen/dp15_textsize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn_login"
        android:layout_marginLeft="@dimen/login_desc_marginLeft"
        android:layout_marginRight="@dimen/login_desc_marginLeft" >

        <TextView
            android:id="@+id/login_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forget_password"
            android:textColor="@color/login_desc" />

        <TextView
            android:id="@+id/login_registers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/new_register"
            android:textColor="@color/login_desc" />
    </RelativeLayout>

