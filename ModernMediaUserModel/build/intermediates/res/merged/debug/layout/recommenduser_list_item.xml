<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_bg"
    android:minHeight="@dimen/recommend_user_item_height" >

    <ImageView
        android:id="@+id/recommend_avatar"
        android:layout_width="@dimen/recommend_user_item_avatar_height"
        android:layout_height="@dimen/recommend_user_item_avatar_height"
        android:layout_marginLeft="@dimen/listitem_avatar_marginleft"
        android:layout_marginTop="@dimen/recommend_user_item_avatar_margintop"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/avatar_placeholder" />

    <TextView
        android:id="@+id/recommend_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/listitem_username_marginleft"
        android:layout_marginTop="@dimen/listitem_username_margintop"
        android:layout_toRightOf="@id/recommend_avatar"
        android:textColor="@color/black_bg"
        android:textSize="@dimen/listitem_name_size" />

    <TextView
        android:id="@+id/recommend_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/recommend_user_name"
        android:layout_below="@id/recommend_user_name"
        android:layout_marginTop="@dimen/recommend_user_item_des_margintop"
        android:textColor="@color/listitem_des"
        android:textSize="@dimen/listitem_des_size" />

    <Button
        android:id="@+id/recommend_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/recommend_user_item_image_marginright"
        android:background="@android:color/transparent"
        android:contentDescription="@null"
        android:padding="@dimen/dp10"
        android:textSize="@dimen/listitem_name_size" />

</RelativeLayout><!-- From: file:/Users/Eva./Desktop/Businessweek-for-Android-newbranch-201304031/modernMediaUserModel/src/main/res/layout/recommenduser_list_item.xml -->