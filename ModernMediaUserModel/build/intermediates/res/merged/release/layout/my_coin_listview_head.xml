<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingRight="@dimen/my_coin_title_maigin_left"
    android:paddingTop="@dimen/my_coin_title_maigin_left" >

    <TextView
        android:id="@+id/my_coin_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/black_bg"
        android:textSize="@dimen/dp40_text_size" />

    <ImageView
        android:id="@+id/my_coin_image_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/my_coin_number"
        android:contentDescription="@null"
        android:src="@drawable/my_coin_coinstack" />

