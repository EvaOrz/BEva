<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white_bg"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/my_coin_item_head_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/my_coin_title_maigin_left" >

        <TextView
            android:id="@+id/my_coin_item_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my_coin_title_maigin_left"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/dp14_textsize" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/my_coin_item_head_title"
            android:layout_below="@id/my_coin_item_head_title"
            android:layout_marginTop="@dimen/dp5"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/my_coin_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_coin_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/my_coin_item_title_height"
        android:layout_below="@id/my_coin_item_head_layout"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/my_coin_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/my_coin_title_maigin_left"
            android:layout_marginRight="@dimen/dp5"
            android:layout_toLeftOf="@+id/my_coin_item_desc"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/dp16_textsize" />

        <TextView
            android:id="@+id/my_coin_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            android:textSize="@dimen/dp16_textsize" />

        <TextView
            android:id="@+id/my_coin_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/my_coin_item_desc_margin_right"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/dp16_textsize" />

        <Button
            android:id="@+id/my_coin_item_button"
            android:layout_width="@dimen/my_coin_item_button_width"
            android:layout_height="@dimen/my_coin_notice_ok_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            android:background="@drawable/login_bg"
            android:text="@string/exchange"
            android:textColor="@color/white_bg"
            android:textSize="@dimen/dp18_textsize"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/my_coin_item_divider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_coin_item_layout"
        android:layout_marginLeft="@dimen/my_coin_title_maigin_left"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/my_coin_line" />

