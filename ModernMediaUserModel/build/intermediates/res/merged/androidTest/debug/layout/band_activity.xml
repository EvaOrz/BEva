<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/square_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bar_height"
        android:layout_marginBottom="10dp"
        android:background="@color/title_bar" >

        <ImageView
            android:id="@+id/band_back"
            android:layout_width="@dimen/bar_height"
            android:layout_height="@dimen/bar_height"
            android:layout_marginLeft="@dimen/nav_button_margin_left"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/band_account"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/nav_title_size" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/list_item_divider" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/band_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/band_phone"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/nav_title_size" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/phone_banded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/banded"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/list_item_name_margin_top" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/list_item_divider" />

    <LinearLayout
        android:id="@+id/band_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/band_email"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/nav_title_size" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/email_banded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/banded"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/list_item_name_margin_top" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/list_item_divider" />

    <TextView
        android:id="@+id/band_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:text="@string/band_address"
        android:textColor="@color/black_bg"
        android:textSize="@dimen/nav_title_size"
        android:visibility="gone" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/list_item_divider"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/band_weibo"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/nav_title_size" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.3dp"
            android:layout_weight="1" />

        <Switch
            android:id="@+id/weibo_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="绑定"
            android:textOn="已绑定" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/band_weixin"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/nav_title_size" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.3dp"
            android:layout_weight="1" />

        <Switch
            android:id="@+id/weixin_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="绑定"
            android:textOn="已绑定" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/band_qq"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/nav_title_size" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.3dp"
            android:layout_weight="1" />

        <Switch
            android:id="@+id/qq_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="绑定"
            android:textOn="已绑定" />
    </LinearLayout>

