<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/bg_color"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/order_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/article_bar_height"
        android:background="@color/title_bar">

        <ImageView
            android:id="@+id/modify_pwd_close"
            android:layout_width="@dimen/article_bar_height"
            android:layout_height="@dimen/article_bar_height"
            android:layout_marginLeft="@dimen/dp5"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/modify_pwd"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/dp18_textsize"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/list_item_divider"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/modify_pwd_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/modify_password"
        android:textColor="@color/login_desc"
        android:textSize="@dimen/dp12_textsize"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_bg"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <ImageView
            android:id="@+id/modify_pwd_img_clear"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_text_field_clear"/>

        <EditText
            android:id="@+id/modify_pwd_old_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_toLeftOf="@id/forget_verify_get"
            android:background="@null"
            android:digits="@string/password_digits"
            android:gravity="center_vertical"
            android:hint="@string/old_pwd"
            android:inputType="textPassword"

            android:singleLine="true"
            android:textColor="@color/black_bg"
            android:textColorHint="@color/login_desc"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/dp14_textsize"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/gray_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_bg"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <ImageView
            android:id="@+id/modify_pwd_img_forget"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_text_field_clear"/>

        <EditText
            android:id="@+id/modify_pwd_new_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/modify_pwd_img_forget"
            android:background="@null"
            android:digits="@string/password_digits"
            android:gravity="center_vertical"
            android:hint="@string/reset_new_pwd"
            android:inputType="textPassword"

            android:singleLine="true"
            android:textColor="@color/black_bg"
            android:textColorHint="@color/login_desc"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/dp14_textsize"/>
    </RelativeLayout>


    <Button
        android:id="@+id/modify_sure"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="30dp"
        android:background="@drawable/login_btn_bg"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/complete"
        android:textColor="@color/white_bg"
        android:textSize="@dimen/dp15_textsize"/>


    <ImageView
        android:id="@+id/modify_pwd_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modify_sure"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/login_img_marginTop"
        android:contentDescription="@null"/>

</LinearLayout>